@model IEnumerable<Greenhouse_Data_MVC.Dtos.WateringDto>

@{
    ViewData["Title"] = "Index";
}

<h1>List of waterings</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HumPctBefore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HumPctAfter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WaterQuantityMl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlantId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HumPctBefore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HumPctAfter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WaterQuantityMl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlantId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id  })
            </td>
        </tr>
}
    </tbody>
</table>
