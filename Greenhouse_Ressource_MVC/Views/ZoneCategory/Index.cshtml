@model IEnumerable<Greenhouse_Ressource_MVC.Dtos.ZoneCategoryDto>

@{
    ViewData["Title"] = "Index";
}

<h1>List of zone categories</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HumidityMinPct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HumidityMaxPct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LuminosityMinLux)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LuminosityMaxLux)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TemperatureMinC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TemperatureMaxC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PressureMinPa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PressureMaxPa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HumidityMinPct)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HumidityMaxPct)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LuminosityMinLux)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LuminosityMaxLux)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TemperatureMinC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TemperatureMaxC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PressureMinPa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PressureMaxPa)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
